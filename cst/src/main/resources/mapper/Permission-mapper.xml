<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="Permission">

    <!-- 模板 慎用 会导致没有where 项时 查出全部数据，要用的话要在业务逻辑中增加查询验证标准-->
    <select id="selectPermissionByRoleId" parameterType="String" resultType="Permission">
        SELECT
			*
		FROM
			p_permission
		WHERE
			permissionId IN (
				SELECT
					permissionId
				FROM
					p_rolepermission
				WHERE
					roleId = #{roleId}
			);

    </select>

	<select id="selectAllPermission" resultType="Permission">
		SELECT * from p_permission
	</select>
</mapper>